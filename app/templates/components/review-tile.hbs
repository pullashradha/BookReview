<div class="review-tile">
  <div class="row">
    <img src={{review.profilePicture}} alt={{review.username}} class="col-xs-6 col-xs-offset-2"/>
    <div class="col-xs-4">
      <h5>{{review.username}}</h5>
      <h5>Published On: {{review.date}}</h5>
      <h5>Rating: {{review-rating review.rating}}</h5>
      <p>
        {{review.reviewContent}}
      </p>
    </div>
  </div>
  <h5>Favorite Books</h5>
  <ul>
    {{#each favoriteBooks.favoriteBooksList as |favoritedBook|}}
      <li>{{favoritedBook.title}} By {{favoritedBook.author}}</li>
    {{/each}}
  </ul>
</div>
